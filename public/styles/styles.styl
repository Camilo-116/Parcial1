@font-face 
    font-family: 'icons';
    src:  url('../fonts/icomoon.eot?uqp01s');
    src:  url('../fonts/icomoon.eot?uqp01s#iefix') format('embedded-opentype'),
        url('../fonts/icomoon.ttf?uqp01s') format('truetype'),
        url('../fonts/icomoon.woff?uqp01s') format('woff'),
        url('../fonts/icomoon.svg?uqp01s#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: block;

*
    font-family: 'Rubik', sans-serif

body
    background-color: black
    .header
        display: flex
        justify-content: space-around
        align-items: center
        height: 100px
        font-weight: bold
        color: white
        .name
            height: min-content
            span    
                padding-right: 5px
                &::before
                    font-family: 'icons'
                    content: '\ea81'
                    color: #6E04A1
        .nav
            display: flex
            justify-content: space-between
            background-color: #191E2C
            height: min-content
            font-size: 12px
            padding: 7px 5px
            border-radius: 30px
            box-shadow: rgba(200, 200, 200, 0.25) 0px 13px 27px -5px, rgba(200, 200, 200, 0.3) 0px 8px 16px -8px;
            span 
                height: min-content
                padding: 5px 10px
                &:first-child
                    background-color: #6E04A1
                    border-radius: 30px
        .socials
            display: flex
            justify-content: space-between
            align-items: center
            width: 100px
            span 
                margin-right: 3px
            .twitter::before
                font-family: 'icons'
                content: '\ea96'
                color: #6E04A1
            .twitch::before
                font-family: 'icons'
                content: '\ea9f'
                color: #6E04A1
            .github::before
                font-family: 'icons'
                content: '\eab0'
                color: #6E04A1
            .web::before
                font-family: 'icons'
                content: '\e9c9'
                color: #6E04A1
    .home
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center
        .skills 
            display: flex
            justify-content: space-evenly
            align-items: center
            margin-top: 50px
            border-radius: 40px
            padding: 20px 40px
            height: 100px
            width: 57vw
            border: 1px solid rgba(255, 255, 255, 0.447)
            .il
                margin: 0 60px
            .skill
                display: flex
                flex: 1
                flex-direction: column
                color: rgba(255, 255, 255, 0.516)
                font-size: 10px
                .title
                    font-size: 1.5rem
                    font-weight: bold
                    margin-bottom: 10px
                    color: white
            .fs
                .icon 
                    margin-right: 3px
                    &::before
                        font-family: 'icons'
                        font-size: 1.5rem
                        content: '\ea81'
                        color: #6E04A1
            .il
                .icon 
                    margin-right: 3px
                    &::before
                        font-family: 'icons'
                        font-size: 1.5rem
                        content: '\e99e'
                        color: #6E04A1
            .sm
                .icon 
                    margin-right: 3px
                    &::before
                        font-family: 'icons'
                        font-size: 1.5rem
                        content: '\e9b3'
                        color: #6E04A1
                
        .profile-card
            display: flex
            width: max-content
            .info
                padding-right: 60px
                width: 400px
                color white
                display: flex
                flex-direction: column
                justify-content: center
                align-items: left
                .title
                    font-size: 3rem
                    font-weight: bold
                .description
                    color: rgba(255, 255, 255, 0.57)
                .tags
                    margin-top: 25px
                    display: flex
                    justify-content: start
                    div 
                        background-color: #6E04A1
                        font-size: 12px
                        border-radius: 30px
                        margin: 0 5px
                        padding: 5px 10px
                        span 
                            margin-right: 5px
                        .dv::before
                            font-family: 'icons'
                            content: '\ea80'
                            color: white
                        .sp::before
                            font-family: 'icons'
                            content: '\e91e'
                            color: white
                        .wt::before
                            font-family: 'icons'
                            content: '\e905'
                            color: white
                    
            .photo
                img 
                    height: 400px
                    border-radius: 50px
                    box-shadow: rgba(200, 200, 200, 0.25) 0px 13px 27px -5px, rgba(200, 200, 200, 0.3) 0px 8px 16px -8px;
    .work
        display: flex
        justify-content: center
        margin-top: 50px
        .selected-work
            display: flex
            flex-direction: column
            width: 57vw  
            padding: 20px 40px;
            .text
                display: flex
                width: 100%
                justify-content: space-between
                color: white
                .info
                    color: rgba(255, 255, 255, 0.493)
                    width: 450px
                    font-size: 14px
                    .title
                        font-size: 1.8rem
                        font-weight: bold
                        color: white
                        margin-bottom: 10px
                .btn
                    padding: 8px 40px
                    height: min-content
                    border-radius: 30px
                    background-color: #6E04A1
                    span 
                        margin-left: 15px
                        &::before
                            font-family: 'icons'
                            content: '\ea3c'
                            color: white
            .works
                display: flex
                flex-flow: row wrap
                justify-content: center
                align-items: center
                padding-top: 40px
                padding-bottom: 60px
                .work 
                    position: relative
                    margin-bottom: 20px
                    width: 40%
                    height: 200px
                    border-radius: 15px
                    &:nth-child(2n)
                        margin-left: 30px
                    &:nth-child(2n+1)
                        top: 60px
                    .wk-tag
                        display: inline-block
                        position: absolute
                        left: 0px
                        background-color: #08090D
                        color: white
                        border-radius: 10px
                        margin: 8px 8px
                        padding: 3px 5px
                .wk1
                    background-image: url('../assets/stock-3.jpg')
                    background-size: cover
                    background-repeat: no-repeat                    
                .wk2
                    background-image: url('../assets/stock-1.jpg')
                    background-size: cover
                    background-repeat: no-repeat
                .wk3
                    background-image: url('../assets/stock-2.jpg')
                    background-size: cover
                    background-repeat: no-repeat
                .wk4
                    background-image: url('../assets/stock-4.jpg')
                    background-size: cover
                    background-repeat: no-repeat
    .about
        display: flex
        flex-direction: column
        align-items: center
        .mentions
            display: flex
            flex-direction: column
            align-items: center
            width: 57vw
            padding: 20px 40px
            margin-bottom: 50px
            .title
                font-size: 3rem
                font-weight: bold
                text-align: center
                color: white
            .info
                text-align: center
                color: rgba(255, 255, 255, 0.493)
                width: 450px
                font-size: 14px
                margin-top: 20px
            .cards
                display: flex
                flex-flow: row wrap
                justify-content: center 
                width: 100%
                margin-top: 50px
                padding: 0 60px
                color: rgba(255, 255, 255, 0.519) 
                div 
                    display: flex
                    flex-direction: column
                    justify-content: center
                    align-items: center
                    width: 30%
                    height: 100px
                    border: 1px solid white 
                    margin: 0 10px 20px 10px 
                    border-radius: 15px
        .working-together
            display: flex
            justify-content: space-between
            align-items: center
            border-top: 1px solid rgba(255, 255, 255, 0.336)
            height: 200px
            border-bottom: 1px solid rgba(255, 255, 255, 0.336)
            width: 100%
            color: white
            .text
                font-weight bold
                font-size: 2rem
                margin-left: 30px
                width: 300px
            .btn
                padding: 8px 40px
                height: min-content
                border-radius: 30px
                background-color: #6E04A1
                margin-right: 30px
                span 
                    margin-left: 15px
                    &::before
                        font-family: 'icons'
                        content: '\e949'
                        color: white
    .footer
        display: flex
        justify-content: space-between
        color: rgba(255, 255, 255, 0.403)
        padding: 10px 35px
        font-size: 10px
        span 
            margin-right: 3px
